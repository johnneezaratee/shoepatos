doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Shoepatos

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main(role="main" class="container-fluid")
      nav(class="w-100 navbar navbar-expand-lg navbar-light bg-light")
        a(class="h1 font-weight-italic mr-5" href="#") Shoepatos Admin
        a(class="nav-item nav-link active" href="#") Home
        form(class="form-inline")
          button(class="btn btn-outline-danger my-2 my-sm-0" type="submit") Sign Out
        
    <div class="container">
        <div class="row">
            <div class="col">
            
            </div>
            <div class="card col">
                h3(class="my-3") Edit item
                <form id="editVue" action="/edit" method="POST">
                    <div class="form-group">
                        <label>Brand</label>
                        <input type="text" class="form-control" name="brand"  v-model="note.brand">
                        <label>Model</label>
                        <input type="text" class="form-control" name="model"  v-model="note.model">
                        <label>Description</label>
                        <input type="text" class="form-control" name="description"  v-model="note.description">
                        <label>Price (in PHP)</label>
                        <input type="text" class="form-control" name="price"  v-model="note.price">
                        <label>Number of items in stock</label>
                        <input type="text" class="form-control" name="instock"  v-model="note.instock">
                    </div>
                    <button type="submit" class="btn btn-primary mb-3" v-on:click="SaveItem">Save</button>
                    <button class="btn btn-primary mb-3">Clear</button>
                </form>
            </div>
            <div class="col">

    script(src="https://unpkg.com/axios/dist/axios.min.js")     
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="/edit-vue.js")            
            
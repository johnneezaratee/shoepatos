doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Shoepatos

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main#indexVue(role="main" class="container-fluid")
      nav(class="w-100 navbar navbar-expand-lg navbar-light bg-light")
        a(class="h1 font-weight-italic mr-5" href="#") Shoepatos
        a(class="nav-item nav-link active" href="#") Home
        a(class="nav-item nav-link form-inline" href="#") My Cart (0)
        form(class="form-inline")
          input(class="form-control mr-sm-2" type="text" placeholder="Username")
          input(class="form-control mr-sm-2" type="password" placeholder="Password")
          button(class="btn btn-outline-info mr-2 my-sm-0" type="submit") Sign In
          button(class="btn btn-outline-success my-2 my-sm-0" type="button"
          v-on:click="gotoUReg") Create Account
      div(class="container")
        h5(class="m-3") Products
        section
          table.table#notesTable
            tr
              th Item no.
              th Brand
              th Model
              th Description
              th Price
              th Actions
            tr(v-for="note in notes")
              td {{ note.id }}
              td {{ note.brand }}
              td {{ note.model }}
              td {{ note.description }}
              td {{ note.price }}
              td {{ note.instock }}
              td
                button(class="btn btn-info mr-2 my-sm-0" type="submit" v-on:click="gotoCheckout") Buy
                button(class="btn btn-success mr-2 my-sm-0" type="button") Add to Cart 
                //- button(class="btn btn-info mr-2 my-sm-0" type="button" v-on:click="gotoShipping") Buy
                //- button(class="btn btn-success mr-2 my-sm-0" type="submit") Add to Cart

    script(src="https://unpkg.com/axios/dist/axios.min.js")     
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="/index-vue.js")